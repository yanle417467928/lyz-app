<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.leyizhuang.app.foundation.dao.AppStoreDAO">

   <select id="findAll" resultType="AppStore">
      SELECT * FROM st_store;
   </select>

   <select id="findById" parameterType="java.lang.Long" resultType="AppStore">
      SELECT * FROM st_store where store_id = #{id}
   </select>

   <select id="findDefaultStoreByCityId" parameterType="java.lang.Long" resultType="AppStore">
       SELECT * FROM st_store where IS_DEFAULT IS TRUE AND city_id = #{cityId}
   </select>

   <select id="findSubventionBalanceByStoreId" parameterType="java.lang.Long" resultType="java.lang.Double">
      SELECT
      balance
      FROM st_subvention
      WHERE store_id = #{storeId}
   </select>

   <select id="findCreditMoneyBalanceByStoreId" parameterType="java.lang.Long" resultType="java.lang.Double">
      SELECT
      credit_limit_available balance
      FROM st_credit_money
      WHERE store_id = #{storeId}
   </select>

   <select id="findPreDepositBalanceByStoreId" parameterType="java.lang.Long" resultType="java.lang.Double">
      SELECT
      balance
      FROM st_pre_deposit
      WHERE store_id = #{storeId}
   </select>
</mapper>